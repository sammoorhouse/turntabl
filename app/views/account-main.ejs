<body id="page-top">
 <% include partials/header_collapsed.ejs %>
	<!-- The Modal -->
	<div id="myModal" class="modal">
		<!-- Modal content -->
		<div class="modal-content container">
			<span id="btn-close"><i class="fa fa-times fa-fw" aria-hidden="true"></i></span>
			<% include partials/new_session.ejs %>
		</div>
	</div>
	<div id="wrap">
		<div class="bg-primary p-t-4 p-b-5 header">
			<div class="container">
				<div class="row">
					<div class="col-sm-6 col-md-8 col-xs-12">
						<h2 class="m-b-0 h2"><%= fullName %></h2>
						<p class="m-b-0 small">Membership number: <%= accountId %><br />Registered: <%= new Date(since).toDateString() %>  </p>
					</div>
				</div>
			</div>
		</div>
		<div class="container m-t-3"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-12 m-b-0">
						<% if (todaysEvents.length > 0) { %>
					<div class="tile tile-inverse main-tile" tabindex="0" role="button">
							<h3 class="h5 m-b-0">Today's remaining sessions:</h3>

							<div class="table-responsive">
								<table class="table table-hover">
									<thead>
									<tr>
										<th>Client name</th>
										<th>Description</th>
										<th></th>
									</tr>
									</thead>
									<tbody>

									<% todaysEvents.forEach(function(event){ %>

									<tr>
										<td><%= event.clientName %></td>
										<td><%= event.sessionName %></td>
										<td><a href="/event/<%= event.sessionId %>">Enter session</a></td>
									</tr>

									<% }) %>

									</tbody>
								</table>
							</div> <!-- /.table-responsive -->
					</div>
						<% } %>
